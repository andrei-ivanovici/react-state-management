{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@assets/*": [
        "src/assets/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
      "@infrastructure/*": [
        "src/infrastructure/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ]
    }
  }
}
